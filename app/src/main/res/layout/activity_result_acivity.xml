<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_beige"
    tools:context=".ResultAcivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/candybeans"
            android:text="@string/marcador"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <ListView
            android:id="@+id/lstv_scores"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_brown"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp"
            android:padding="22dp" />

        <ImageView
            android:id="@+id/btn_again"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_pink"
            android:padding="16dp"
            android:src="@drawable/ic_again" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>